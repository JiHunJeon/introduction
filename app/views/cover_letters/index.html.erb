<header>
  <section class="container edit_user_container">
<p id="notice"><%= notice %></p>

<h1>Listing Cover Letters</h1>

<table class="table table-bordered resumes_table">
  <thead>
    <tr>
      <th>Text</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cover_letters.each.with_index do |cover_letter, index| %>
      <tr>
        <td><%=  index+1 %></td>
        <td><%= link_to 'Show', cover_letter %></td>
        <td><%= link_to 'Edit', edit_cover_letter_path(cover_letter) %></td>
        <td><%= link_to 'Destroy', cover_letter, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Cover letter', new_cover_letter_path, class: "btn btn-primary" %>

    </section>
  </header>