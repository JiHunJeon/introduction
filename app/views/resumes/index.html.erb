<header>
  <section class="container-fluid">
<p id="notice"><%= notice %></p>

<h1>Your Resumes</h1>

<table class="table table-bordered resumes_table">
  <thead>
    <tr>
      <th>Summary</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @resumes.each do |resume| %>
      <tr>
        <td><%= resume.summary %></td>
        <td><%= link_to 'Show', resume %></td>
        <td><%= link_to 'Edit', edit_resume_path(resume) %></td>
        <td><%= link_to 'Destroy', resume, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
    <%= will_paginate @resumes, renderer: BootstrapPagination::Rails  %>
    </br>
<%= link_to 'New Resume', new_resume_path, class: "btn btn-warning" %>
  </section>
</header>